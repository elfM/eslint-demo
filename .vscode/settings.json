{
  // 启用 ESLint
  "eslint.enable": true,

  // 自动修复保存时的错误
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // 保存时自动修复
  //   "editor.codeActionsOnSave": {
  //     "source.fixAll.eslint": "explicit"
  //   },

  // 显示 ESLint 的诊断信息
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // 使用 ESLint 作为格式化工具
  //   "eslint.format.enable": true,

  // 显示 ESLint 状态栏
  "eslint.alwaysShowStatus": true
}
